<Window x:Class="U2KeeganGoodTimes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:U2KeeganGoodTimes"
        mc:Ignorable="d"
        Title="TooMuchTimeOnMyHands.exe" Height="350" Width="365">
    <Grid>
        <TextBox 
            x:Name="txbInput"
            HorizontalAlignment="Left" 
            Height="22" 
            Margin="10,10,0,0" 
            TextWrapping="Wrap" 
            Text="Input 24h Ottawa time" 
            VerticalAlignment="Top"
            Width="213"/>
        <Button 
            x:Name="btnConvert"
            Content="Tell me the time!" 
            HorizontalAlignment="Left" 
            Height="22" 
            Margin="223,10,0,0" 
            VerticalAlignment="Top" 
            Width="127"
            Click="btnConvert_Click"/>
        <TextBox 
            x:Name="txbOutput"
            IsReadOnly="True"
            HorizontalAlignment="Left" 
            Height="279" Margin="10,32,0,0" 
            TextWrapping="Wrap" 
            Text="Ottawa Victoria"
            VerticalAlignment="Top" 
            Width="338" 
            FontSize="24"/>


    </Grid>
</Window>
